<div class="panel panel-default">
  <div class="panel-heading">
    Datos
  </div>
  <div class="panel-body">
    <div class="row">
      <%= form_for(@departamento) do |f| %>
      <% if @departamento.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@departamento.errors.count, "error") %>
          prohibited this departamento from being saved:</h2>

        <ul>
          <% @departamento.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>

      <div class="col-md-12">
        <div class="col-md-6">
          <%= f.label :nombre %><br>
          <div class="form-group input-group">
            <span class="input-group-addon">
              <span class="fa fa-align-justify"></span>
            </span>
            <%= f.text_field :nombre, class: "form-control", REQUIRED: "", autofocus: "" %>
          </div>
        </div>
        <div class="col-md-6">
          <%= f.label :dependencia_id %><br>
          <div class="form-group input-group">
            <span class="input-group-addon">
              <span class="fa fa-building-o"></span>
            </span>
            <% if f.object.dependencia_id=f.object.dependencia_id ? f.object.dependencia_id : 0%>
            <%= f.select(:dependencia_id, options_for_select(Dependencia.all.map{|s|[s.nombre, s.id]}, f.object.dependencia_id),{include_blank:'Seleccione una Dependencia...'},:class =>"form-control", REQUIRED: "" )  %></span>
          <%end%>
        </div>
      </div>
    </div>
    <%= render 'layouts/botones', p: departamentos_path  %>
  <%end%>
  </div>
</div>

</div>
