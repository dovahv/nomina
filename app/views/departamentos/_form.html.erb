<div class="panel panel-default">
  <div class="panel-heading">
    Datos
  </div>
  <div class="panel-body">
    <div class="row">
      <%= form_for(@departamento) do |f| %>
      <% if @departamento.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@departamento.errors.count, "error") %>
          prohibited this departamento from being saved:</h2>

        <ul>
          <% @departamento.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>

      <div class="form-group col-md-12">
        <%= f.label :nombre %><br>
        <%= f.text_field :nombre ,class: "form-control"%>
        <div class="form-group">
          <%= f.label :dependencia_id %><br>
          <%= f.select(:dependencia_id, options_for_select(Dependencia.all.map{|s|[s.nombre, s.id]}, params[:dependencia_id]),{},:class =>"form-control")  %></span>
      </div>
    </div>

    <div class="actions col-md-12">
      <%= f.submit "Guardar", class:  "btn btn-primary btn-md boton" %>
      <%= link_to raw('<i class="fa fa-arrow-circle-left"></i> Regresar'), departamentos_path, class: "btn btn-default btn-md boton"  %>
    </div>
  </div>
</div>
</div>
<% end %>
