<div class="page-header">
  <div class="pull-right">
    <%= link_to "Nuevo Concepto", new_concepto_path, class: "btn btn-danger"  %>
  </div>
  <h1>Conceptos</h1>
</div>
<div class="panel panel-success">
  <div class="panel-heading">
    Asignaciones
  </div>
  <%if Concepto.all.where(tipo_de_concepto:0).length>0%>
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-bordered table-condensed table-responsive table-bordered">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Formula</th>
            <th>Modalidad de pago</th>
            <thclass= "actions" style= "width: 100px;">Acciones</th>
          </tr>
        </thead>

        <tbody>
          <%
          asignaciones=@conceptos.where(tipo_de_concepto: 0).order("created_at")
          asignaciones.each do |concepto| %>
          <tr>
            <td><%= concepto.nombre %></td>
            <td><%= concepto.formula %></td>
            <td><%= $dic["modos_de_pago"].key(concepto.modalidad_de_pago )%></td>
            <td><div class="btn-group btn-group-xs form-inline" role="group" aria-label="...">

          <%= link_to '', concepto,class: "btn btn-default fa fa-eye " %>
            <%= link_to '', edit_concepto_path(concepto),class: "btn btn-default fa fa-pencil" %>
            <%= link_to '', concepto,class: "btn btn-danger fa fa-trash", method: :delete, data: { confirm: 'Esta seguro?' } %></div></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <%elsif%>
  <div class="actions">
    <h4>"No hay asignaciones disponibles"</h4>
  </div>
  <%end%>
</div>
<div class="panel panel-danger">
  <div class="panel-heading">
    Deducciones
  </div>
    <%if Concepto.all.where(tipo_de_concepto:1).length>0%>
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-bordered table-condensed table-responsive table-bordered">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Formula</th>
            <th>Modalidad de pago</th>
            <th>Acciones</th>
          </tr>
        </thead>

        <tbody>
          <%
  deducciones=@conceptos.where(tipo_de_concepto: 1).order("created_at")
            deducciones.each do |concepto| %>
          <tr>
            <td><%= concepto.nombre %></td>
            <td><%= concepto.formula %></td>
            <td><%= $dic["modos_de_pago"].key(concepto.modalidad_de_pago )%></td>
            <td><%= link_to '', concepto,class: "fa fa-eye" %></td>
            <td><%= link_to '', edit_concepto_path(concepto),class: "fa fa-pencil" %></td>
            <td><%= link_to '', concepto,class: "fa fa-trash", method: :delete, data: { confirm: 'Esta seguro?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <%elsif%>
  <div class="actions">
    <h4>"No hay deducciones disponibles"</h4>
  </div>
  <%end%>
</div>
