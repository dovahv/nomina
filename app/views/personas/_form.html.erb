<%= form_for(@persona) do |f| %>
<% if @persona.errors.any? %>
<div id="error_explanation">

  <%
 messages="<h2>"+@persona.errors.count.to_s+" errores al guardar</h2>"
    @persona.errors.full_messages.each do |message|
 messages<<"<li>"<<message<<"</li>"

 end
 %>
  <div class="alert alert-danger alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert">
      <span aria-hidden="true">&times;</span>
      <span class="sr-only">Close</span>
    </button>
    <%= raw(messages)%>
  </div>

</div>
<% end %>
<div class="row">
  <div class="col-md-12 col-sm-12">
    <ul class="nav nav-tabs">
      <li class="active">
        <a href="#datos" data-toggle="tab">datos personales </a>
      </li>
      <li class="">
        <a href="#familiares" data-toggle="tab">familiares</a>
      </li>
      <li class="">
        <a href="#conceptospersonales" data-toggle="tab">conceptos personales</a>
      </li>
    </ul>

    <div class="tab-content">
      <div class="tab-pane fade active in" id="datos">
        <%= render 'datos',:f => f  %>
        
      </div>
      <div class="tab-pane fade" id="familiares">
     
  <%= f.fields_for :familiares do |fa| %>


     <%= render 'familiar_fields', :f => fa %>
     <% end %>
     <div class="links">

  <%= link_to_add_association raw('<i class="fa fa-plus"></i> Agregar Familiar'), f, :familiares, class: "links pull-right" %>
</div>
      </div>
      <div class="tab-pane fade" id="conceptospersonales">
     
 <%= f.fields_for :registrosconceptos do |fa| %>


     <%= render 'registroconcepto_fields', :f => fa %>
     <% end %>
     <div class="links">

  <%= link_to_add_association raw('<i class="fa fa-plus"></i> Agregar concepto'), f, :registrosconceptos, class: "links pull-right" %>
</div>
      </div>
    </div>
  </div>
</div>







   



<div class="col-xs-12 actions"><br>
  <%= f.submit "Guardar", class:  "btn btn-primary btn-md boton" %>
  <%= link_to raw('<i class="fa fa-arrow-circle-left"></i> Regresar'), personas_path ,class: "btn btn-default btn-md boton"%>

</div>
<% end %>
