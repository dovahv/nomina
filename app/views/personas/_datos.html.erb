<div class="panel panel-default">
  <div class="panel-heading">
    Datos Personales
  </div>
  <div class="panel-body">
    <div class="col-xs-6 form-group <%='has-error' if @persona.errors.keys.include?(:cedula) ==true or @persona.errors.keys.include?(:tipo_de_cedula) ==true %> <%='has-success' if ((@persona.errors.keys.include?(:cedula) ==false and @persona.errors.keys.include?(:tipo_de_cedula) ==false) and @persona.errors.any?)%>">
      <%= f.label :cedula,class: "control-label" %>
      <div class="input-group form-inline">

        <span class="input-group-btn" >
          <%  d =(Persona._attr_readonly.include?("tipo_de_cedula") and f.object.id.nil? == false) ? "disabled" : " "%>

          <%= f.select(:tipo_de_cedula, options_for_select($dic["tipos_de_cedula"], @persona.tipo_de_cedula),{},class: "btn btn-default dropdown-toggle form-control",style: "padding:5.5px 12px;width:60px","#{d}": true) %>
        </span>
        <%  d =(Persona._attr_readonly.include?("cedula") and f.object.id.nil? == false) ? "disabled" : " "%>
        <%= f.telephone_field :cedula ,class: "form-control",label: false, error: "Campo obligarotio.",maxlength: "8", pattern:"[0-9]{8}","data-toggle"=>"popover", "data-trigger"=>"focus", "data-placement"=>"top", title: "Número de Cédula",
        "data-content"=>"Este campo no podrá ser editado despúes de guardar.","#{d}": true %>
        <span class="input-group-addon">
          <span class="fa fa-user"></span>
        </span>
      </div>
    </div>
    <div class="col-xs-6 form-group">
      <%= f.label "Fotografia",class: "control-label" %>
      <div class="form-group input-group">
        <span class="input-group-addon">
          <span class="fa fa-image"></span>
        </span>
        <%= f.file_field  :avatar, class: "form-control" %>
      </div>
    </div>
    <div class="col-xs-6 form-group <%='has-error' if @persona.errors.keys.include?(:nombres) ==true %>  <%='has-success' if (@persona.errors.keys.include?(:nombres) ==false and @persona.errors.any?)%>">
      <%= f.label :nombres,class: "control-label" %>
      <div class="form-group input-group">
        <span class="input-group-addon">
          <span class="fa fa-align-justify"></span>
        </span>
        <%= f.text_field :nombres,class: "form-control",maxlength: "50" %></div>
    </div>
    <div class="col-xs-6 form-group <%='has-error' if @persona.errors.keys.include?(:apellidos) ==true %>  <%='has-success' if (@persona.errors.keys.include?(:apellidos) ==false and @persona.errors.any?)%>">
      <%= f.label :apellidos,class: "control-label" %>
      <div class="form-group input-group">
        <span class="input-group-addon">
          <span class="fa fa-align-justify"></span>
        </span>
        <%= f.text_field :apellidos ,class: "form-control",maxlength: "50" %>
      </div>
    </div>
    <div class="col-xs-6 form-group <%='has-error' if @persona.errors.keys.include?(:telefono_fijo) ==true %>  <%='has-success' if (@persona.errors.keys.include?(:telefono_fijo) ==false and @persona.errors.any?)%>">
      <%= f.label "Teléfono fijo",class: "control-label" %>
      <div class="form-group input-group">
        <span class="input-group-addon">
          <span class="fa fa-phone"></span>
        </span>
        <%= f.telephone_field :telefono_fijo ,class: "form-control", maxlength: "11", pattern:"[0-9]{11}", "data-toggle"=>"popover", "data-trigger"=>"focus", "data-placement"=>"top", title: "Teléfono fijo",
        "data-content"=>"El formato debe ser el siguiente: 0295XXXXXXX." %>
      </div>
    </div>
    <div class="col-xs-6 form-group <%='has-error' if @persona.errors.keys.include?(:telefono_movil) ==true %>  <%='has-success' if (@persona.errors.keys.include?(:telefono_movil) ==false and @persona.errors.any?)%>">
      <%= f.label "Teléfono móvil",class: "control-label" %>
      <div class="form-group input-group">
        <span class="input-group-addon">
          <span class="fa fa-mobile"></span>
        </span>
        <%= f.telephone_field :telefono_movil ,class: "form-control", maxlength: "11", pattern:"[0-9]{11}", "data-toggle"=>"popover", "data-trigger"=>"focus", "data-placement"=>"top", title: "Teléfono móvil",
        "data-content"=>"El formato debe ser el siguiente: (0424, 0414, 0426, 0416 ó 0412)XXXXXXX."  %>
      </div>
    </div>
    <div class="col-xs-6 form-group <%='has-error' if @persona.errors.keys.include?(:correo) ==true %>  <%='has-success' if (@persona.errors.keys.include?(:correo) ==false and @persona.errors.any?)%>">
      <%= f.label :correo,class: "control-label" %>
      <div class="form-group input-group">
        <span class="input-group-addon">@</span>
        <%= f.email_field :correo ,class: "form-control", "data-toggle"=>"popover", "data-trigger"=>"focus", "data-placement"=>"top", title: "Correo electrónico",
        "data-content"=>"El formato debe ser el siguiente: correo@mail.com" %>
      </div>
    </div>
    <div class="col-xs-6 form-group <%='has-error' if @persona.errors.keys.include?(:fecha_de_nacimiento) ==true %>  <%='has-success' if (@persona.errors.keys.include?(:fecha_de_nacimiento) ==false and @persona.errors.any?)%>">
      <%= f.label :fecha_de_nacimiento,class: "control-label" %>
      <div class="form-group input-group">
        <span class="input-group-addon">
          <span class="fa fa-calendar"></span>
        </span>
        <%= f.date_field :fecha_de_nacimiento ,class: "form-control" %>
      </div>
    </div>
    <div class="col-xs-6 form-group <%='has-error' if @persona.errors.keys.include?(:sexo) ==true %>  <%='has-success' if (@persona.errors.keys.include?(:sexo) ==false and @persona.errors.any?)%>">
      <%= f.label :sexo,class: "control-label" %>
      <div class="form-group input-group">
        <span class="input-group-addon">
          <span class="fa fa-venus-mars"></span>
        </span>
        <%= f.select(:sexo, options_for_select($dic["sexos"],@persona.sexo),{include_blank: 'Seleccione un sexo...'},class: "form-control" )  %>
      </div>
    </div>
    <div class="col-xs-6 form-group <%='has-error' if @persona.errors.keys.include?(:cargo_id) ==true %>  <%='has-success' if (@persona.errors.keys.include?(:cargo_id) ==false and @persona.errors.any?)%>">
      <%= f.label :cargo_id,class: "control-label" %><br>
      <div class="form-group input-group">
        <span class="input-group-addon">
          <span class="fa fa-briefcase"></span>
        </span>
        <% if f.object.cargo_id=f.object.cargo_id ? f.object.cargo_id : 0%>
        <%= f.select(:cargo_id, options_for_select(Cargo.all.where("disponible=true or id=#{f.object.cargo_id}").map{|s|[s.nombre, s.id]},f.object.cargo_id),{include_blank:'Seleccione un cargo...'}, class: 'form-control')  %>
        <%end%>
      </div>
    </div>

    <div class="col-xs-6 form-group <%='has-error' if @persona.errors.keys.include?(:cuenta) ==true %>  <%='has-success' if (@persona.errors.keys.include?(:cuenta) ==false and @persona.errors.any?)%>">
      <%= f.label :cuenta,class: "control-label" %>
      <div class="form-group input-group">
        <span class="input-group-addon">
          <span class="fa fa-university"></span>
        </span>
        <%= f.telephone_field :cuenta ,class: "form-control", maxlength: "20",minlength: "20", pattern:"[0-9]{20}", "data-toggle"=>"popover", "data-trigger"=>"focus", "data-placement"=>"top", title: "Número de cuenta",
        "data-content"=>"El número de cuenta debe tener exactamente 20 dígitos."%>
      </div>
    </div>
    <div class="col-xs-6 form-group <%='has-error' if @persona.errors.keys.include?(:direccion) ==true %>  <%='has-success' if (@persona.errors.keys.include?(:direccion) ==false and @persona.errors.any?)%>">
      <%= f.label :direccion,class: "control-label" %>
      <div class="form-group input-group">
        <span class="input-group-addon">
          <span class="fa fa-home"></span>
        </span>
        <%= f.text_area :direccion ,class: "form-control" %>
      </div>
    </div>
    <div class="col-xs-12 form-group">
      <%= f.label 'Este empleado paga: ' %><br>
      <div class="btn-group" data-toggle="buttons">
        <label class="btn btn-primary opc" id="FAOV">
          <%= f.check_box :FAOV%>
          <%=:FAOV %>
        </label>
        <label class="btn btn-primary opc" id="ivss">
          <%= f.check_box :IVSS%>
          <%=    :IVSS
                  %>
        </label>
        <label class="btn btn-primary opc" id="TSS">
          <%= f.check_box :TSS%>
          <%=:TSS %>
        </label>
        <label class="btn btn-primary opc" id="caja_de_ahorro">
          <%= f.check_box :caja_de_ahorro%>
          <%="Caja de Ahorro"  %>
        </label>
      </div>
    </div>
  </div>
</div>
<div class="panel panel-default">
  <div class="panel-heading">
    Contrato
  </div>
  <div class="panel-body">
    <%= f.fields_for :contrato  do |contrato_builder|  %>
    <div class="col-xs-6 <%='has-error' if @persona.errors.keys.include?(:"contrato.tipo_de_contrato") ==true %>  <%='has-success' if (@persona.errors.keys.include?(:"contrato.tipo_de_contrato") ==false and @persona.errors.any?)%>">
      <%= contrato_builder.label :tipo_de_contrato,class: "control-label" %>
      <div class="form-group input-group">
        <span class="input-group-addon">
          <span class="fa fa-file-text-o"></span>
        </span>
        <%= contrato_builder.select(:tipo_de_contrato, options_for_select($dic["tipos_de_contrato"], @persona.contrato.tipo_de_contrato),{include_blank: 'Seleccione un tipo de contrato...'},class: "form-control" ) %>
      </div>
    </div>
    <div class="col-xs-6 <%='has-error' if @persona.errors.keys.include?(:"contrato.fecha_inicio") ==true %>  <%='has-success' if (@persona.errors.keys.include?(:'contrato.fecha_inicio') ==false and @persona.errors.any?)%>">
      <%= contrato_builder.label :fecha_inicio,class: "control-label" %>
      <div class="form-group input-group">
        <span class="input-group-addon">
          <span class="fa fa-calendar"></span>
        </span>
        <%= contrato_builder.date_field :fecha_inicio,class: "form-control" %>
      </div>
    </div>
    <div class="col-xs-6">
      <%= contrato_builder.label :fecha_fin %>
      <div class="form-group input-group">
        <span class="input-group-addon">
          <span class="fa fa-calendar"></span>
        </span>
        <%= contrato_builder.date_field :fecha_fin, disabled: true, class: "form-control" %>
      </div>
    </div>
    <div class="col-xs-6">
      <%= contrato_builder.label :sueldo_externo %>
      <div class="form-group input-group">
        <span class="input-group-addon">
          <span class="fa fa-money"></span>
        </span>
        <%= contrato_builder.number_field :sueldo_externo, disabled: true ,class: "form-control" %>
        <span class="input-group-addon">Bs.</span>
      </div>
    </div>
    <% end %>
  </div>
</div>
<script type="text/javascript">
  checks = $('.opc').children('input[type="checkbox"]');
  var i;
  $(function () {
    for (i = 0; i < checks.length; i++) {
      if ($("#" + checks[i].id).prop("checked")) {
        $("#" + checks[i].id).parent().attr("class", "btn btn-primary active opc");
      }
    }

    $('.opc').on('click', function () {
      check = $("#" + this.id).find('input[type="checkbox"]');

      if (check.prop("checked")) {
        $(this).attr("class", "btn btn-primary opc"); // button text will be "finished!"
        $("#" + check.id).removeAttr("checked");
      } else {

        $(this).attr("class", "btn btn-primary active opc"); // button text will be "finished!"}
        $("#" + check.id).attr("checked", "checked");
      }
    })
  });
</script>
