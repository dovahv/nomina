      </li>
      <li class="">
        <a href="#retirados" data-toggle="tab" class="retirados_">Retirados</a>
      </li>
    </ul>

    <div class="tab-content">
      <div class="tab-pane fade active in" id="activos">
        <div class = "sort_paginate_ajax"><%= render 'personas', :p => @personas %></div>
      </div>
      <div class="tab-pane fade" id="retirados">
      <div class = "sort_paginate_ajax_retirados"><%= render 'personas', :p => @personas_retiradas %></div>

      </div>
    </div>
  </div>
</div>
<script>

$(function() {
  $(".retirados_").on("click", function(){
    alert('dgfdfgdf');
    $.getScript("/personas?page=1");
    return false;
  });

  $(".sort_paginate_ajax th a, .sort_paginate_ajax .pagination a").on("click", function(){
    $.getScript(this.href);
    return false;
  });
  $(".sort_paginate_ajax_retirados th a, .sort_paginate_ajax_retirados .pagination a").on("click", function(){
    $.getScript(this.href);
    return false;
