<div class="page-header">
  <div class="pull-right">
    <%= link_to "Contratar Persona", new_persona_path, class: "btn btn-danger"  %>
  </div>
  <h1>Empleados</h1>
</div>

<div class="row">
  <div class="col-md-12 col-sm-12">
    <ul class="nav nav-tabs">
      <li class="active">
