<%= simple_form_for(@tipo, html: {  role: "form"})   do |f| %>
<%= render 'layouts/errores', x: @tipo %>
<div class="panel panel-default">
  <div class="panel-heading">
    Datos
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-12 <%='has-error' if @tipo.errors.keys.include?(:nombre) ==true %> <%='has-success' if (@tipo.errors.keys.include?(:nombre) ==false and @tipo.errors.any?)%>">
        <%= f.label :nombre,class: "control-label" %><br>
        <div class="form-group input-group">
          <span class="input-group-addon">
            <span class="fa fa-align-justify"></span>
          </span>
          <%= f.text_field :nombre, class: "form-control", autofocus: "" %>
        </div>
      </div>
      <%= render 'layouts/botones', p: tipos_path  %>
    </div>
  </div>
</div>
<% end %>
