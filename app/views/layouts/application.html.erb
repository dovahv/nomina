<!DOCTYPE html>
<html>
  <head>
    <title>Nomina</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <header>
      <%= render '/layouts/menu' %>
    </header>
    <article>

  <div id="page-wrapper" >
      <div id="page-inner">
          <div class="row">
            <% flash.each do |type, content| %>
            <% if content.respond_to?('each')
                content.each do |item| %>
                    <%= render 'layouts/alert',
                        type: type,
                        content: item %>
                <% end %>
            <% else %>
                <%= render 'layouts/alert',
                        type: type,
                        content: content %>
            <% end %>

          <% end %>
<div class="col-md-12"><%= yield %></div>


          </div>
           <!-- /. ROW  -->
           <hr />

</div>
       <!-- /. PAGE INNER  -->
      </div>
   <!-- /. PAGE WRAPPER  -->
  </div>

    </article>
  </body>
</html>
